<Window x:Class="YoutubeImporter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoutubeImporter"
        mc:Ignorable="d"
        Title="MainWindow" WindowStartupLocation="CenterScreen" Height="400" Width="750">
    <Window.Background>
        <ImageBrush ImageSource="Resources/blbc.jpg"/>
    </Window.Background>
    <Grid Margin="0,0,-0.4,-3.6" HorizontalAlignment="Right" Width="694" Height="374" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="342*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="159*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="SearchBox" HorizontalAlignment="Left" Margin="-13,25,0,0" Width="212" KeyDown="SearchBox_KeyDown" Height="18" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <ListView x:Name="mListView" ItemsSource="{Binding Channels}" Margin="-49,50,1.4,2.4" HorizontalAlignment="Right" Width="742" Grid.Row="1" Grid.ColumnSpan="2">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="5" HorizontalAlignment="Stretch"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel x:Name="sPanel" Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Image Source="{Binding PhotoURL}" HorizontalAlignment="Stretch" VerticalAlignment="Top" Stretch="UniformToFill" />
                        <TextBlock Text="{Binding Name}" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button  x:Name="searchBtn" Content="Search" HorizontalAlignment="Left" Margin="202.6,25,0,0" Width="75" Height="20" VerticalAlignment="Top" Click="Search_Click" Grid.Column="1" BorderBrush="Black">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF3650DD" Offset="1"/>
                    <GradientStop Color="#FFEDDEDE"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>


        <Button x:Name="addChannelBtn" Content="add channel" HorizontalAlignment="Left" Margin="-13,8,0,0" VerticalAlignment="Top" Width="79" Click="addChannelBtn_Click" Grid.Row="1" Height="20" Grid.ColumnSpan="2">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF3650DD" Offset="1"/>
                    <GradientStop Color="#FFEDDEDE"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="removeChannelBtn" Content="remove channel" HorizontalAlignment="Left" Margin="74.6,8,0,0" VerticalAlignment="Top" Width="100" Click="removeChannelBtn_Click" Grid.Row="1" Height="20" Grid.Column="1" BorderBrush="Black">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF3650DD" Offset="1"/>
                    <GradientStop Color="#FFEDDEDE"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="showMyChannelsBtn" Content="show my channels" HorizontalAlignment="Left" Margin="193.6,8,0,0" VerticalAlignment="Top" Width="113" Click="showMyChannelsBtn_Click" Grid.Row="1" Height="20" Grid.Column="1" BorderBrush="Black">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF3650DD" Offset="1"/>
                    <GradientStop Color="#FFEDDEDE"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <!--<Button x:Name="playBtn" Content="Play" HorizontalAlignment="Left" Margin="655,42,0,0" VerticalAlignment="Top" Width="75" Click="playBtn_Click"/>-->
        <Image Grid.Column="1" Source="Resources/YouTubeLogo.png" HorizontalAlignment="Left" Height="54" Margin="536.6,30,0,0" VerticalAlignment="Top" Width="137" Grid.RowSpan="2"/>
        <Button Content="Show Playlist" Click="showPlaylistClick"  Grid.Column="1" Margin="327,7,282,289" Grid.Row="1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF3650DD" Offset="1"/>
                    <GradientStop Color="#FFEDDEDE"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="showVideosBtn" Content="Show videos" Click="showVideosBtn_Click" Grid.Column="1" HorizontalAlignment="Left" Margin="422,6,0,0" Grid.Row="1" VerticalAlignment="Top" Width="88" Height="21">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF3650DD" Offset="1"/>
                    <GradientStop Color="#FFEDDEDE"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Show my playlist channels" Grid.Column="1" HorizontalAlignment="Left" Margin="331,29,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button x:Name="addPlaylistChanneleBtn" Content="add playlist channel" Grid.Column="1" HorizontalAlignment="Left" Margin="444,27,0,0" VerticalAlignment="Top" Width="75" Click="addPlaylistChanneleBtn_Click"/>

        <!--<Button x:Name="showVideosBtn" Content="show videos" HorizontalAlignment="Left" Margin="24,65.333,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="showVideosBtn_Click"/>-->
    </Grid>



</Window>
