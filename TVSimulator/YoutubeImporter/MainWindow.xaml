<Window x:Class="YoutubeImporter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoutubeImporter"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid Margin="-1,0,-0.333,-3.333" HorizontalAlignment="Right" Width="800" Height="600" VerticalAlignment="Bottom">
        <Grid.RowDefinitions>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="275*"/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Right" Margin="0,46,693,496" TextWrapping="Wrap" Text="Search:" Grid.RowSpan="2"/>
        <TextBox x:Name="SearchBox" HorizontalAlignment="Left" Margin="124,24,0,2.667" Height="20" Width="212"/>
        <Button  Content="Search" HorizontalAlignment="Left" Margin="364,44,0,0" Width="75" Height="20" VerticalAlignment="Top" Click="Button_Click_1"/>
        <ListView x:Name="mListView" ItemsSource="{Binding Channels}" HorizontalAlignment="Left" Height="503" Margin="2,3.333,0,0" Grid.Row="1" VerticalAlignment="Top" Width="797">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path}" Header="path" Width="200"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Title" Width="150"/>
                    <GridViewColumn DisplayMemberBinding="{Binding PhotoURL}" Header="PhotoURL" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>

</Window>
