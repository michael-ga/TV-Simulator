<Window x:Class="TVSimulator.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TVSimulator"
        mc:Ignorable="d"
        Title="SettingWindow" Height="400" Width="400">
    <Grid>
        <Button x:Name="getFolderBtn"  Content="Choose Folder" HorizontalAlignment="Left" Margin="35,79,0,0" VerticalAlignment="Top" Width="100" Click="getFolderBtn_Click" />
        <CheckBox x:Name="subfolderBtn" Content="Include Subfolders" Checked="CheckBox_Checked" HorizontalAlignment="Left" Margin="38,110,0,0" VerticalAlignment="Top"/>
        <Menu HorizontalAlignment="Left" Height="100" Margin="172,192,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
