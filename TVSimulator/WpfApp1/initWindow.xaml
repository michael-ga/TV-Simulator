<Window x:Class="TVSimulator.initWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TVSimulator"
        mc:Ignorable="d"
        Title="initWindow" Height="500" Width="500">
    <Window.Background>
        <ImageBrush ImageSource="Resources/fileImporterScreen.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Button x:Name="getFolderBtn"  Content="Browse" HorizontalAlignment="Left" Margin="344,283,0,0" Width="100" Height="23" VerticalAlignment="Top" />
        <CheckBox x:Name="subfolderBtn" Content="Include Subfolders" HorizontalAlignment="Left" Margin="25,258,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="28,283,0,0" TextWrapping="Wrap" Text="TextBox" Width="305" Height="23" VerticalAlignment="Top"/>
        <Button x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="207,421,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
