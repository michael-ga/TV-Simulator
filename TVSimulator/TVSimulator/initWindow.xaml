<Window x:Class="TVSimulator.initWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TVSimulator"
        mc:Ignorable="d"
        Title="initWindow" Height="500" Width="500">
    <Window.Background>
        <ImageBrush ImageSource="Resources/fileImporterScreen.PNG"/>
    </Window.Background>
    <Grid>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Button x:Name="getFolderBtn"  Content="Browse" HorizontalAlignment="Left" Margin="334,283,0,0" Width="100" Height="23" VerticalAlignment="Top" />
        <CheckBox x:Name="subfolderBtn" Content="Include Subfolders" HorizontalAlignment="Left" Margin="15,258,0,0" VerticalAlignment="Top" Foreground="White"/>
        <TextBox HorizontalAlignment="Left" Margin="18,283,0,0" TextWrapping="Wrap" Width="305" Height="23" VerticalAlignment="Top" TextChanged="TextBox_TextChanged_1" Foreground="#FF050442" Text="C://"/>
        <Button x:Name="btnSubmit" Content="Start" HorizontalAlignment="Left" Margin="207,416,0,0" VerticalAlignment="Top" Width="75" Height="24"/>

    </Grid>
</Window>
