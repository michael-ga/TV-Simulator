<Window x:Class="TVSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TVSimulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="900">
    <Grid Margin="0,0,-1.4,0.4" Height="670" VerticalAlignment="Bottom">
        <MediaElement x:Name="mediaPlayer" LoadedBehavior="Manual" Margin="39,27,35,115" Stretch="Fill" />

        <TextBox x:Name="folderPathTextbox" Margin="224,0,0,27.4" TextWrapping="Wrap" Text="D:\utorrent" Height="46" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="445" IsReadOnly="true" />
        <Button x:Name="selectFolderBtn" Content="Select Folder" Margin="95,0,0,45.4" Click="chooseFolderBtn_Click" Height="28" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="115"/>
        <Button Content="launch test" x:Name="testBtn" Margin="0,0,14.6,30.4" VerticalAlignment="Bottom" Height="42" Click="testBtn_Click" HorizontalAlignment="Right" Width="89"/>
        <CheckBox x:Name="subfolder_Checkbox" Content="include subfolders" Checked="CheckBox_Checked" HorizontalAlignment="Left" Margin="93,0,0,26.4" Height="15" VerticalAlignment="Bottom"/>
        <Image x:Name="musicImage" Stretch="Fill" Height="527" Margin="40,29,36,0" VerticalAlignment="Top" Source="http://www.powerpointhintergrund.com/uploads/2017/07/music-background-www-galleryhip--the-hippest-pics-10.jpeg" Visibility="hidden"/>
        <Button x:Name="channelUp" Content="c+" Margin="0,240,8,0" VerticalAlignment="Top" Height="110" Click="Channel_Up_Click" HorizontalAlignment="Right" Width="23"/>
        <Button x:Name="channelDown" Content="c-" Margin="11,244,0,0" VerticalAlignment="Top" Height="110" Click="Channel_Down_Click" HorizontalAlignment="Left" Width="23"/>
    </Grid>
</Window>
