<Window x:Class="TVSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TVSimulator"
        mc:Ignorable="d"
       Title="MainWindow" Height="740.6" Width="1200" Visibility="Visible" WindowStyle="ToolWindow" >
    <Grid Margin="0,0,0,0" Height="706">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <MediaElement x:Name="mediaPlayer" LoadedBehavior="Manual" Margin="0,-26,0.2,-4" Stretch="Fill" />
        <Image x:Name="musicImage" Stretch="Fill" Height="706" Margin="0,0,0.6,0" VerticalAlignment="Top" Source="http://www.powerpointhintergrund.com/uploads/2017/07/music-background-www-galleryhip--the-hippest-pics-10.jpeg" Visibility="Visible"/>
