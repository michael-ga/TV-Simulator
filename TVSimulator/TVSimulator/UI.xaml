<Window x:Class="TVSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TVSimulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="900">
    <Grid Margin="0,0,0,0">
        <MediaElement x:Name="mediaPlayer" LoadedBehavior="Manual" Margin="0,2,-0.4,96.4" Stretch="Fill"   MouseDown="OnMouseDownPauseMedia" />

        <TextBox x:Name="folderPathTextbox" Margin="224,0,0,27.4" TextWrapping="Wrap" Text="D:\utorrent" Height="46" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="445"/>
        <Button x:Name="playBtn" Content="Play" Margin="14,0,0,30.4" Click="playBtn_Click" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="66"/>
        <Button x:Name="selectFolderBtn" Content="Select Folder" Margin="95,0,0,45.4" Click="chooseFolderBtn_Click" Height="28" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="115"/>
        <!--<Button x:Name="selectFileBtn" Content="Select File" HorizontalAlignment="Left" Margin="704,599,0,15.4" Width="75" Click="selectFileBtn_Click"/>
              -->
        <Button Content="launch test" x:Name="testBtn" Margin="0,0,14.6,30.4" VerticalAlignment="Bottom" Height="42" Click="testBtn_Click" HorizontalAlignment="Right" Width="89"/>
        <CheckBox x:Name="subfolder_Checkbox" Content="include subfolders" Checked="CheckBox_Checked" HorizontalAlignment="Left" Margin="93,0,0,26.4" Height="15" VerticalAlignment="Bottom"/>
        <Button Content="Exit" x:Name="btnExit" Margin="0,0,112.6,31.4" VerticalAlignment="Bottom" Height="39" Click="Exit_Click" HorizontalAlignment="Right" Width="96"/>
    </Grid>
</Window>
